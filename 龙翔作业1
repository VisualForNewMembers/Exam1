# VisualExam
梯队考核1
#include<iostream>

using namespace std;

int main() {
	int d=0;
	int arr[8] = { 50,60,70,100,94,89,38,d};
	//打印初始顺序


	cout << "初始顺序为：" << endl;
	for (int a = 0; a < 7; a++) {
		cout << arr[a] << " ";
	}cout << endl;

	//输入一个值

	cout << "请输入一个值:";
	 cin >> arr[7];
	cout << "输入后的数组为";
	for (int a = 0; a < 8; a++) {
		cout << arr[a] << " ";
	}cout << endl;

	//排序开始
	
	//总排序次数为元素个数-1
	for (int a = 0; a < 8 - 1; a++) {

		//内层循环对比   次数=  元素个数-当前轮数-1
		for (int b = 0; b < 8 - a - 1; b++) {
			//如果第一个数比第二个数大则交换他们

			if (arr[b] > arr[b + 1]) {
				int temp = arr[b];
				arr[b] = arr[b + 1];
				arr[b + 1] = temp;

			}

		}

	}

	//最后输出
	cout << "最后顺序为：";
	for (int d = 0; d < 8; d++) { cout << arr[d] << " "; };
	cout << endl;

	system("pause");
	return 0;
}

