//作业一
#include<iostream>
using namespace std;
int main1() {
	int arr[4] = { 1,3,1,4 };
	cout << "原顺序的数组：" << endl;
	for (int i = 0; i < sizeof(arr) / sizeof(arr[0]); i++)
	{
		cout <<arr[i]<< " ";
	}
	cout << endl;
	int a = 0;
	cout << "请用户输入一个数值：" << endl;
	cin >> a;
	int arr1[5] = { 1,3,1,4,a };
	for (int i = 0; i < sizeof(arr1) / sizeof(arr1[0]) - 1; i++)
	{
		for (int j = 0; j < sizeof(arr1) / sizeof(arr1[0]) - i - 1; j++) {
			if (arr1[j] > arr1[j + 1])
			{
				int temp = arr1[j + 1];
				arr1[j + 1] = arr1[j];
				arr1[j] = temp;
			}
		}
	}
	cout << "帮您排序好了:" << endl;
	for (int i = 0; i < sizeof(arr1) / sizeof(arr1[0]); i++)
	{
		cout << arr1[i] << " ";
	}
	cout << endl;
	
	system("pause");
	return 0;
}
